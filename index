    <script>
        // Level navigation
        document.querySelectorAll('.level-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                const level = btn.dataset.level;
                
                // Update nav buttons
                document.querySelectorAll('.level-btn').forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                
                // Show selected level
                document.querySelectorAll('.level-section').forEach(s => s.classList.remove('active'));
                document.getElementById(`level-${level}`).classList.add('active');
            });
        });

        // Mode toggle (Learn/Practice)
        document.querySelectorAll('.mode-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                const mode = btn.dataset.mode;
                const level = btn.dataset.level;
                
                // Update mode buttons for this level
                document.querySelectorAll(`.mode-btn[data-level="${level}"]`).forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                
                // Show selected mode
                document.getElementById(`l${level}-learn`).classList.toggle('active', mode === 'learn');
                document.getElementById(`l${level}-practice`).classList.toggle('active', mode === 'practice');
            });
        });
    </script>
